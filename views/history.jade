doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title History - Prime Hunter

    link(href="/public/css/bootstrap-3.3.1.min.css", rel="stylesheet")
    link(href="/public/css/prime.css", rel="stylesheet")
    
    if isprod
      script(src="/public/js/ga.js")
  body
    
    include navbar.jade
    
    div.jumbotron
      div.container
        div.row
          div.col-lg-8.col-md-8.col-sm-8
            h1 History
            p You can see your farming history here. 
    
    div.container
      div.row
        div.col-lg-12.col-md-12.col-sm-12
          table#data-table.table
            thead
              tr
                th Time
                th Tier
                th Mission
                th Reward
            tbody
              each run in runs
                tr
                  td #{run.ts}
                  td Tier #{run.tier}
                  td #{run.mission}
                  td 
                    ul
                      each rew in run.reward
                        li #{rew}
              
    include footer.jade
    
    script(src="/public/js/jquery-2.1.3.min.js")
    script(src="/public/js/jquery.toaster.js")
    script(src="/public/js/bootstrap-3.3.1.min.js")
    script(src="/public/js/moment-2.8.4.js")
    script(src="/public/js/PHitems.js")
    script(src="/public/js/history.js")
    script(src="/public/js/feedback.js")
    